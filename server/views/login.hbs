<main class="form">
  <h3 class="text-center">Войти</h3>
  <form id="loginForm" action="/signin" method="POST">
    <div class="mb-3">
      <label for="email-login" class="form-label">Email</label>
      <input type="email" class="form-control" name="email" id="email-login">
    </div>
    <div class="mb-3">
      <label for="password-login" class="form-label">Пароль</label>
      <input type="password" minlength="8" class="form-control" name="password" id="password-login">
    </div>
    <button type="submit" class="btn btn-block">Submit</button>
  </form>
</main>
